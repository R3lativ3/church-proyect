<!-- Dashboard principal con cards y bloques de ejemplo -->
<section class="page">

  <!-- TOPBAR -->
  <%- include("partials/topbar", {
    userName: data.userName,
    date: data.date,
    role: data.role
  }) %>

  <!-- CARDS -->
  <section class="cards-row">
    <div class="card stat-card">
      <p class="stat-label">Total Members</p>
      <p class="stat-value"><%= data.stats.totalMembers.toLocaleString() %></p>
    </div>

    <div class="card stat-card">
      <p class="stat-label">Total Events</p>
      <p class="stat-value"><%= data.stats.totalEvents %></p>
    </div>

    <div class="card stat-card">
      <p class="stat-label">Total Services</p>
      <p class="stat-value"><%= data.stats.totalServices %></p>
    </div>
  </section>

  <!-- GRAFICOS DUMMY -->
  <section class="grid-2">
    <div class="card">
      <div class="card-header">
        <p class="card-title">Member Growth Past Six Months</p>
        <span class="card-subtitle">+64.78%</span>
      </div>
      <div class="chart-placeholder">
        <span>Chart placeholder</span>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <p class="card-title">Gender Percentage</p>
      </div>
      <div class="donut-placeholder">
        <span>Donut chart placeholder</span>
      </div>
    </div>
  </section>

  <!-- CALENDARIO + EVENTOS -->
  <section class="grid-2">

    <% ministerios.forEach(m => { %>
      <div class="card" style="width: 18rem;">
        <img src="<%= m.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= m.ministerio %></h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card’s content.</p> <!-- put description-->
          <a href="#" class="btn btn-primary">Go somewhere</a> <!-- do nothing-->
        </div>
      </div>
    <% }) %>

    <div class="card">
      <div class="card-header">
        <p class="card-title">Latest Events</p>
      </div>

      <ul class="events-list">
        <% data.latestEvents.forEach(ev => { %>
          <li class="event-item">
            <p class="event-title"><%= ev.title %></p>
            <p class="event-meta"><%= ev.date %> — <%= ev.time %></p>
            <p class="event-church"><%= ev.church %></p>
          </li>
        <% }) %>
      </ul>
    </div>
  </section>

</section>
